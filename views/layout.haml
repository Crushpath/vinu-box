-# Based on HTML5 BoilerPlate project http://html5boilerplate.com/

<!doctype html>
%html.no-js{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
      %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
        %title Box Sample Application
        %meta{:content => "A sample Box application", :name => "description"}
          %meta{:content => "you", :name => "author"}
            %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}
              %link{:href => "css/boilerplate.css", :rel => "stylesheet"}
                %link{:href => "css/layout.css", :rel => "stylesheet"}
                  %link{:href => "css/dashboard.css", :rel => "stylesheet"}
  %body
    #container
      -# Header at the page top
      %header.box_blue_bg
        %h3#logout
          %a{:href => "/logout"} Logout
        %h2.inline
          = account.login
        %h5.inline
          Space used:
          %span.lgrey
            = account.space_used.to_i / 1048576
            MB
        %h5.inline
          Space avaliable:
          %span.lgrey
            = account.space_amount.to_i / 1048576
            MB
      -# Renders the rest of the template here
      #content
        = yield
      -# The footer bar at the top of the page
      %footer
        %h5.inline
          Built with the
          %a{:href => "https://www.box.com/developers/api"} Box Platform API
      #fakefooter
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"}
    :javascript
      window.jQuery || document.write('<\/script>')
    %script{:src => "js/dashboard.js"}