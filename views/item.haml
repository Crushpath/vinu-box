-# Renders a navigation cell for each item ( Can be a file or folder)
%li.item.clickable{"data-id" => item.id, "data-type" => item.type}
  -# Table to line up everything
  %table
    %tr
      %td
        -# Show folder or file icon
        %td.media
          - if item.type == 'file'
            - icon_url = item.thumbnail
            .thumb_small{:style => "background-image: url(#{icon_url})"}

          - else
            -# Use Generic icon and overlay the file count for folder
            .folder_icon.overlay
              %span.overlay_content= item.file_count
        %td.data
          -# Show the data for the file or folder
          = item.name
      %td.pitchbtn.clickable{"data-id" => item.id, "data-type" => item.type}
        -# Pitch button if it is a file
        - if item.type == 'file'
          %p.pitch Pitch
